.background {
  width: 100%;
  height: 90%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.banner{
  height: 250px;
  background-color: #798a77;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}
.banner image{
  width: 100%;
  height:95%;
  border-radius: 5%;
}
.bannerItem{
  padding:0 10px;
  box-sizing:border-box;
}

.new{
  font-size:35rpx ;
  margin-top: 20rpx;
  margin-left: 33rpx;
}

.line{
  margin-left:40rpx;
  margin-top:15rpx;
  width:55px;
  height:8rpx;
  background:#798a77;
  }

.out{
  padding:30rpx;
  box-sizing: border-box;
}

.row{
  display: flex;
  height: 190rpx;
  margin-bottom:30rpx ;
}

.pic{
  flex: 5;
}

.pic image{
  width: 100%;
  height: 100%;
  border-radius: 10%;
}

.biao{
  margin-top: 8rpx;
  height: 30rpx;
  width: 30rpx;
}

.text{
  flex: 8;
  border-bottom:1px solid rgb(255, 255, 255);
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
}

.text .title{
  font-size:40rpx ;
  margin-left: 10rpx;
}

.text .time{
  font-size:25rpx;
  color: rgb(119, 119, 119);
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.text .place{
  font-size:25rpx;
  color: rgb(119, 119, 119);
  margin-left: 10rpx;
  margin-top: 10rpx;
}